def calculate_simple_interest():
    final_amount = n * (1 + (p * m) / 100)
    print("\nВихідні дані:")
    print(f"{final_amount:.2f}")
print("Введіть початкову суму (n, грн):")
n = float(input())
print("Введіть річну відсоткову ставку (p, %):")
p = float(input())
print("Введіть кількість років (m):")
m = int(input())
calculate_simple_interest(n, p, m)
