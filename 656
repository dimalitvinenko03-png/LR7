def calculate_simple_interest(n,p,m):
    final_amount = n * (1 + (p * m) / 100)
    return final_amount
print("Введіть початкову суму (n, грн):")
n = float(input())
print("Введіть річну відсоткову ставку (p, %):")
p = float(input())
print("Введіть кількість років (m):")
m = int(input())
result=calculate_simple_interest(n, p, m)
print(f"{result:.2f}")
